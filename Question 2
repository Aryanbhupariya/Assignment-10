#include <iostream>
#include <iomanip>
#include <string>
using namespace std;

struct Marks {
    float math;
    float science;
    float english;
};

struct Student {
    int rollNo;
    string name;
    Marks marks;
    float average;
};

int main() {
    const int SIZE = 5;
    Student students[SIZE];

    cout << "Enter details for " << SIZE << " students:\n";

    for (int i = 0; i < SIZE; ++i) {
        cout << "\nStudent " << i + 1 << ":\n";

        cout << "Roll No: ";
        cin >> students[i].rollNo;

        cout << "Name: ";
        cin.ignore(); 
        getline(cin, students[i].name);

        cout << "Marks in Math: ";
        cin >> students[i].marks.math;

        cout << "Marks in Science: ";
        cin >> students[i].marks.science;

        cout << "Marks in English: ";
        cin >> students[i].marks.english;

        // compute average
        students[i].average = (students[i].marks.math +
                               students[i].marks.science +
                               students[i].marks.english) / 3.0f;
    }

   
    int highestIndex = 0, lowestIndex = 0;
    for (int i = 1; i < SIZE; ++i) {
        if (students[i].average > students[highestIndex].average)
            highestIndex = i;
        if (students[i].average < students[lowestIndex].average)
            lowestIndex = i;
    }

    cout << "\n----------------------------------------\n";
    cout << "Student with Highest Average Marks:\n";
    cout << "Roll No: " << students[highestIndex].rollNo << endl;
    cout << "Name: " << students[highestIndex].name << endl;
    cout << "Average Marks: " << fixed << setprecision(2)
         << students[highestIndex].average << endl;

    cout << "\nStudent with Lowest Average Marks:\n";
    cout << "Roll No: " << students[lowestIndex].rollNo << endl;
    cout << "Name: " << students[lowestIndex].name << endl;
    cout << "Average Marks: " << fixed << setprecision(2)
         << students[lowestIndex].average << endl;
    cout << "----------------------------------------\n";

    return 0;
}
